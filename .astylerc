# braces and indent
style=google
indent=spaces=2
attach-inlines

# indentation
indent-switches
indent-continuation=2
indent-preproc-define
min-conditional-indent=0
max-continuation-indent=80

# padding
pad-oper
pad-header
unpad-paren
align-pointer=type
add-braces

# formatting
break-one-line-headers
break-blocks=all
keep-one-line-blocks
keep-one-line-statements
convert-tabs

